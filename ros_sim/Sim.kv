#:kivy 1.0.9

<SimCar>:
    size: 40, 70
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            axis: (0, 0, 1)
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        PopMatrix

<Simulator>:
    car: sim_car
    SimCar:
        id: sim_car
        center: self.parent.center
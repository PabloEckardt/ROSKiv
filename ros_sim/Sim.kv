#:kivy 1.10.0
#:set Top 720
#:set Down 25
#:set Left 25
#:set Right 1400
#:set Width 10

<SimCar>:
    size: 100, 50
    angle: 0
    pos: (450,250)
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            axis: (0, 0, 1)
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        PopMatrix

<Wall>:
    canvas:
        Color:
            rgb: 0,.35,1
        Rectangle:
            size: self.size
            pos: self.pos

<Simulator>:

    car: sim_car

    wall_left: wallleft_id
    wall_right: wallright_id
    wall_top: walltop_id
    wall_down: walldown_id

    SimCar:
        id: sim_car
        center: self.parent.center

    Label:
        font_size: 25
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.car_x_label)


    Label:
        font_size: 25
        center_x: root.width * 3 / 4 - 150
        top: root.top - 50
        text: str(root.car_y_label)

	# LEFT
    Wall:
        id: wallleft_id
        size: Width,Top-Down*2
        pos: 25,25

	# RIGHT
    Wall:
        id: wallright_id
        size: 10,Top-Down*2
        pos: 1360,Down

	# TOP
    Wall:
        id: walltop_id
        size: 1345,10
        pos: 25,695

	# BOTTOM
    Wall:
        id: walldown_id
        size: 1345,10
        pos: Left,Down

